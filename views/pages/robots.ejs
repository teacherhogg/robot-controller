<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body class="h-screen overflow-auto flex flex-col min-h-screen" style="background: #edf2f7;">
  <% include ../partials/nav.ejs %>

  <div class="m-5">
    
  <h2>Robots</h2>

  <form class="w-full max-w-sm" method="post" action="/activate">
    <div class="flex flex-col">
        <% robots.forEach(function(r) { %>
        <label class="inline-flex items-center mt-3">
            <input type="checkbox" name=<%= r.id %> class="form-checkbox h-5 w-5 text-gray-600" <%= r.active ? 'checked' : '' %> ><span class="ml-5 text-purple-700"><%= r.id %></span>
        </label>
        <% }); %>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3">
        <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">Make It So!</button>
        </button>
      </div>
    </div>
  </form>

  </div>

</body>
</html>
